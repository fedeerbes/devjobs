<main class="contenedor">
  <form action={{newPositionFormUrl}} method="POST" class="default-form">
    <h3>General information</h3>

    <div class="campo">
      <label for="title">Title</label>
      <input type="text" name="title" placeholder="Ex: React Developer">
    </div>
    <div class="campo">
      <label for="company">Company</label>
      <input type="text" name="company" placeholder="Ex: Facebook">
    </div>
    <div class="campo">
      <label for="location">Location</label>
      <input type="text" name="location" placeholder="Ex: Remote">
    </div>
    <div class="campo">
      <label for="salary">Salary (USD)</label>
      <input type="text" name="salary" placeholder="Ex: $500 USD">
    </div>
    <div class="campo">
      <label>Contract</label>
      <select name="contract">
        <option value="" disabled>-- Select --</option>
        <option value="freelance">Freelance</option>
        <option value="full-time">Full Time</option>
        <option value="part-time">Part Time</option>
        <option value="for-project">For Project</option>
      </select>
    </div>
    
    <h3>Position Description</h3>
    <div class="campo descripcion">
      <label>Description</label>
      <input type="hidden" id="x" name="description">
      <trix-editor input="x"></trix-editor>
    </div>

    <h3>Skills</h3>
    <ul class="lista-conocimientos">
      {{#selectSkill a}}
      {{/selectSkill}}
    </ul>

    <div class="campo centrar-horizontal">
      <input type="hidden" id="skills" name="skills">
      <input type="submit" value="Submit" class="btn btn-azul">
    </div>
  </form>
</main>